<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/firebaseCardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background3"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F3F3"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cardFirebaseIv"
            android:layout_width="match_parent"
            android:layout_height="660dp"
            android:layout_marginTop="1dp"
            android:background="#F8F6F6"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/roundImageView" />

        <TextView
            android:id="@+id/textFirebaseView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#474545"
            android:fontFamily="@font/caveat"
            android:letterSpacing=".08"
            android:shadowColor="#7A7757"
            android:text="Image Name"
            android:textAlignment="center"
            android:textColor="#EFE9E9"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

</androidx.cardview.widget.CardView>